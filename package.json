{
  "name": "kalambo",
  "version": "0.1.0",
  "description": "Kalambo data system",
  "author": "Jon Whitehead",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prettier": "prettier --single-quote --trailing-comma all --write \"{src,test}/**/*.{ts,tsx}\"",
    "clean": "rimraf lib/*",
    "build": "yarn run clean && tsc && babel lib/core -d lib/core --presets env && babel lib/client -d lib/client --presets env",
    "test": "jest",
    "prepublish": "yarn run test && yarn run build"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js"]
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.1",
    "@types/jest": "^20.0.2",
    "@types/react-dom": "^15.5.1",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "enzyme": "^2.9.1",
    "jest": "^20.0.4",
    "prettier": "^1.5.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.7",
    "typescript": "^2.4.1"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "dependencies": {
    "@types/graphql": "^0.9.3",
    "@types/mongodb": "^2.2.7",
    "@types/pegjs": "^0.10.0",
    "@types/recompose": "^0.23.1",
    "flat": "^2.0.1",
    "graphql": "^0.10.3",
    "lodash": "^4.17.4",
    "mishmash": "^0.3.0",
    "mongodb": "^2.2.30",
    "most": "^1.5.0",
    "normalizr": "^3.2.3",
    "pegjs": "^0.10.0",
    "recompose": "^0.23.5"
  }
}
