{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "downlevelIteration": true
  },
  "include": ["src/**/*", "test/**/*"]
}
